<Window x:Class="MainAPP.WindowTweak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:libActiveX="clr-namespace:Lib_ActiveX;assembly=Lib_ActiveX"
        Title="WindowTweak" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="关闭" Click="ButtonClose_Click"></Button>
        <WindowsFormsHost Grid.Row="1" Name="Host">
            <WindowsFormsHost.Child>
                <libActiveX:BlockPanel></libActiveX:BlockPanel>
            </WindowsFormsHost.Child>
        </WindowsFormsHost>

    </Grid>
</Window>
